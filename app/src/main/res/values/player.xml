<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="show_buffering">always</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="surface_type">surface_view</item>
    </style>

    <style name="PlayerImage">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="PlayerSmallImage" parent="PlayerImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="PlayerLargeImage" parent="PlayerImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="PlayerPlay" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_play</item>
        <item name="android:src">@drawable/baseline_play_arrow_black_48</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PlayerPause" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_pause</item>
        <item name="android:src">@drawable/baseline_pause_black_48</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PlayerTopRightPanel">
        <item name="android:id">@id/topRightPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerMinimize" parent="PlayerSmallImage">
        <item name="android:id">@id/minimize</item>
        <item name="android:src">@drawable/baseline_expand_more_black_48</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="PlayerSettings" parent="PlayerSmallImage">
        <item name="android:id">@id/settings</item>
        <item name="android:src">@drawable/baseline_settings_black_24</item>
    </style>

    <style name="PlayerDownload" parent="PlayerSmallImage">
        <item name="android:id">@id/download</item>
        <item name="android:src">@drawable/ic_file_download_black_24dp</item>
    </style>

    <style name="PlayerFollow" parent="PlayerSmallImage">
        <item name="android:id">@id/follow</item>
        <item name="android:src">@drawable/baseline_favorite_border_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSleep" parent="PlayerSmallImage">
        <item name="android:id">@id/sleepTimer</item>
        <item name="android:src">@drawable/baseline_alarm_black_24</item>
    </style>

    <style name="PlayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerPosition" parent="PlayerText">
        <item name="android:id">@id/exo_position</item>
        <item name="android:layout_width">55sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="PlayerDuration" parent="PlayerText">
        <item name="android:id">@id/exo_duration</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="PlayerProgress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_toEndOf">@id/exo_position</item>
        <item name="android:layout_toRightOf">@id/exo_position</item>
        <item name="android:layout_toLeftOf">@id/exo_duration</item>
        <item name="android:layout_toStartOf">@id/exo_duration</item>
    </style>

    <style name="PlayerFullscreenToggle" parent="PlayerSmallImage">
        <item name="android:id">@id/fullscreenToggle</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PlayerRestart" parent="PlayerSmallImage">
        <item name="android:src">@drawable/baseline_replay_black_24</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PlayerRewind" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_rew</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="PlayerForward" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_ffwd</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="PlayerChannel" parent="PlayerText">
        <item name="android:id">@id/channel</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_toEndOf">@id/minimize</item>
        <item name="android:layout_toRightOf">@id/minimize</item>
        <item name="android:layout_toStartOf">@id/topRightPanel</item>
        <item name="android:layout_toLeftOf">@id/topRightPanel</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="PlayerHideChat" parent="PlayerSmallImage">
        <item name="android:id">@id/hideChat</item>
        <item name="android:src">@drawable/baseline_speaker_notes_off_black_24</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PlayerShowChat" parent="PlayerSmallImage">
        <item name="android:id">@id/showChat</item>
        <item name="android:src">@drawable/baseline_speaker_notes_black_24</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PlayerRatio" parent="PlayerSmallImage">
        <item name="android:id">@id/aspectRatio</item>
        <item name="android:src">@drawable/baseline_aspect_ratio_black_24</item>
    </style>

    <style name="PlayerShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="PlayerViewers" parent="PlayerImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/baseline_person_black_36</item>
    </style>

</resources>